#!/bin/bash
# Thothix Universal Runner - Unix/Linux/macOS
# This script automatically installs Node.js dependencies and runs npm scripts

echo "🔧 Thothix Universal Runner (Unix)"

# Check if Node.js is installed
if ! command -v node &> /dev/null; then
    echo "❌ Node.js is not installed. Please install Node.js 16+ from https://nodejs.org/"
    exit 1
fi

# Check if we have arguments
if [ $# -eq 0 ]; then
    echo "📖 Usage: ./run [script] [args...]"
    echo "📋 Available scripts:"
    if npm run --silent 2>/dev/null; then
        npm run --silent
    else
        echo "   Installing dependencies first..."
        npm install
        npm run --silent
    fi
    exit 0
fi

# Auto-install dependencies if node_modules doesn't exist
if [ ! -d "node_modules" ]; then
    echo "📦 Installing Node.js dependencies..."
    if ! npm install; then
        echo "❌ Failed to install dependencies"
        exit 1
    fi
    echo "✅ Dependencies installed"
fi

# Run the npm script with all arguments
echo "🚀 Running: npm run $*"
npm run "$@"
